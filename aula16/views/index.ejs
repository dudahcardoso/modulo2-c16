<!DOCTYPE html>
<html lang="pt-br">
  <%- include('./components/head') %>

  <body>
    <header>
      <h1>Filmes</h1>
      <%- include('./components/nav') %>
    </header>
    <main>
        <!-- comparação para ver se acha o filme na pesquisa, por isso o uso do if e else -->
      <% if (filmeSearch.length == 0){ %>
      <div class="container">
        <% filmes.forEach(item => { %>
        <div class="item">
          <h2><%= item.nome %></h2>
          <p><%= item.descricao %></p>
          <a href="/filmes/<%= item.id %>"
            ><img src="<%= item.imagem %>" alt="capa do filme"
          /></a>
        </div>
        <% }) %>
      </div>

      <% } else { %>
      <section class="result">
        <div id="result-search-space">
          <h2>Resultados da Pesquisa</h2>
          <a href="/">Todos os filmes</a>
        </div>
      </section>

      <div class="container">
        <% filmes.forEach(item => { %>
        <div class="item">
          <h2><%= item.nome %></h2>
          <p><%= item.descricao %></p>
          <a href="/filmes/<%= item.id %>"
            ><img src="<%= item.imagem %>" alt="capa do filme"
          /></a>
        </div>
        <% }) %>
      </div>
      <% } %>
    </main>

    <%- include('./components/footer') %>

    <script src="./js/script.js"></script>
  </body>
</html>
